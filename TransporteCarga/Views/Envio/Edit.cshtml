    <script type="text/javascript">
            $(document).ready(function () {

                $("#proveedorId").change(function () {
                    $.ajax({
                        url: "@Url.Action("GetChoferes", "Envio")",
                        data: { id: $("#proveedorId").val() },
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        $("#choferId").empty();
                        for (var i = 0; i < data.length; i++) {
                            $("#choferId").append("<option value=" + data[i].choferId + ">" + data[i].nombres + "</option>");
                        }

                    },
                    error: function () {

                    }
                    });
                    //Vehiculo
                    $.ajax({
                        url: "@Url.Action("GetVehiculos", "Envio")",
                        data: { id: $("#proveedorId").val() },
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        $("#vehiculoId").empty();
                        for (var i = 0; i < data.length; i++) {
                            $("#vehiculoId").append("<option value=" + data[i].vehiculoId + ">" + data[i].placaUnidad + "</option>");
                        }

                    },
                    error: function () {

                    }
                });


                });

                $('.i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green',
                });
            })

    </script>
